{
  "manifest_version": 3,
  "name": "Seer Sync",
  "version": "0.1.0",
  "description": "Real-time communication platform for Chrome",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/ssys_logo.png",
      "32": "icons/ssys_logo.png",
      "48": "icons/ssys_logo.png",
      "128": "icons/ssys_logo.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "identity"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
   "oauth2": {
    "client_id": "880394972027-s041m973m5p2h58efvim83jf9mm9i1dg.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ],
  "icons": {
    "16": "icons/ssys_logo.png",
    "32": "icons/ssys_logo.png",
    "48": "icons/ssys_logo.png",
    "128": "icons/ssys_logo.png"
  }
  }
}